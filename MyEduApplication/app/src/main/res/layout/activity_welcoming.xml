<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp"
    android:background="#EDE7F6">

    <!-- Center-Aligned Welcome Text -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Welcome to EduApplication"
        android:textColor="#D32F2F"
        android:textSize="36sp"
        android:textStyle="bold" />

    <!-- Grid Layout for Categories -->
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="2"
        android:alignmentMode="alignMargins"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp">

        <!-- Science Category -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:gravity="center_horizontal">

            <FrameLayout
                android:id="@+id/scienceFrame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/scienceImage"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/science_image" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Science"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Geography Category -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:gravity="center_horizontal">

            <FrameLayout
                android:id="@+id/geographyFrame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/geographyImage"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/geography_image" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Geography"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Math Category -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:gravity="center_horizontal">

            <FrameLayout
                android:id="@+id/mathFrame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/mathImage"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/math_image" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Math"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- English Category -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:gravity="center_horizontal">

            <FrameLayout
                android:id="@+id/englishFrame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/englishImage"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/english_image" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="English"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

    </GridLayout>

    <!-- Play Button -->
    <Button
        android:id="@+id/playButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:background="@drawable/play_button_background"
        android:fontFamily="serif"
        android:padding="8dp"
        android:text="JOIN"
        android:textSize="22sp"
        android:textStyle="bold" />

    <!-- More information Button below Play Button -->
    <Button
        android:id="@+id/exitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@drawable/play_button_background"
        android:fontFamily="serif"
        android:padding="8dp"
        android:text="My Profile"
        android:textSize="22sp"
        android:textStyle="bold" />

</LinearLayout>
