<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.myeduapplication">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyEduApplication"
        tools:targetApi="31">

        <!-- Overall Stats Activity -->
        <activity
            android:name=".OverallStatsActivity"
            android:exported="false" />

        <!-- My Profile Activity -->
        <activity
            android:name=".MyProfileActivity"
            android:exported="false" />

        <!-- English Options Activity -->
        <activity
            android:name=".EnglishOptionsActivity"
            android:exported="false" />

        <!-- Flashcard Activity -->
        <activity
            android:name=".FlashcardActivity"
            android:exported="false" />

        <!-- Result Activity -->
        <activity
            android:name=".ResultActivity"
            android:exported="false" />

        <!-- Main Activity: Welcoming Activity -->
        <activity
            android:name=".WelcomingActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Quiz Activity -->
        <activity
            android:name=".QuizActivity"
            android:exported="false" />

        <!-- Register Quiz Reminder Receiver for Notifications -->
        <receiver
            android:name=".QuizReminderReceiver"
            android:enabled="true"
            android:exported="false" />
    </application>

</manifest>
